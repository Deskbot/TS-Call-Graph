{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "outDir": "./out",
        "sourceMap": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "ES2017"
    },

    "exclude": [
        "./dev/examples"
    ]
}