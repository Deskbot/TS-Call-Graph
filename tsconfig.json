{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "CommonJS",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "outDir": "./js",
        "sourceMap": true,
        "sourceRoot": "./src",
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "ES2017"
    },

    "exclude": [
        "./dev/**/*"
    ]
}